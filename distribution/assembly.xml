<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <formats>
        <format>zip</format>
    </formats>
    <id>pack</id>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>LICENSE.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>deployment.toml</include>
                <include>log4j2.properties</include>
                <include>cipher-standalone-config.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/conf/security</directory>
            <outputDirectory>conf/security</outputDirectory>
            <includes>
                <include>dashboard.jks</include>
                <include>cipher-text.properties</include>
                <include>cipher-tool.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/conf/config-parser</directory>
            <outputDirectory>repository/resources/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>dashboard.sh</include>
                <include>dashboard.bat</include>
                <include>ciphertool.bat</include>
                <include>ciphertool.sh</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/classes</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>version.txt</include>
            </includes>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../components/org.wso2.micro.integrator.dashboard.web/target/www</directory>
            <outputDirectory>server/www</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../components/org.wso2.micro.integrator.dashboard.web/WEB-INF</directory>
            <outputDirectory>server/www/WEB-INF</outputDirectory>
            <includes>
                <include>web.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../components/org.wso2.ei.dashboard.core/target</directory>
            <outputDirectory>server/webapps</outputDirectory>
            <includes>
                <include>org.wso2.ei.dashboard.core.war</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${project.basedir}/src/main/resources/updates/product.txt</source>
            <outputDirectory>updates</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/README.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/bin/yajsw/wrapper.conf</source>
            <outputDirectory>bin/yajsw/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/bin/yajsw/README.txt</source>
            <outputDirectory>bin/yajsw/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
    </files>

    <!-- package dependencies -->
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>org.wso2.ei:org.wso2.ei.dashboard.bootstrap:jar</include>
                <include>org.eclipse.jetty:jetty-server:jar</include>
                <include>org.eclipse.jetty:jetty-servlet:jar</include>
                <include>org.eclipse.jetty:jetty-webapp:jar</include>
                <include>org.eclipse.jetty:jetty-util:jar</include>
                <include>org.eclipse.jetty:jetty-http:jar</include>
                <include>org.eclipse.jetty:jetty-io:jar</include>
                <include>org.eclipse.jetty:jetty-security:jar</include>
                <include>org.eclipse.jetty:jetty-xml:jar</include>
                <include>javax.servlet:javax.servlet-api:jar</include>
                <include>javax.xml.bind:jaxb-api:jar</include>
                <include>javax.activation:activation:jar</include>
                <include>net.consensys.cava:cava-toml:jar</include>
                <include>org.antlr:antlr4-runtime:jar</include>
                <include>org.apache.logging.log4j:log4j-core:jar</include>
                <include>org.apache.logging.log4j:log4j-api:jar</include>
                <include>org.slf4j:slf4j-api:jar</include>
                <include>org.apache.logging.log4j:log4j-slf4j-impl:jar</include>
                <include>com.google.guava:guava:jar</include>
                <include>org.wso2.config.mapper:config-mapper:jar</include>
                <include>com.google.code.gson:gson:jar</include>
                <include>org.jsoup:jsoup:jar</include>
                <include>com.google.re2j:re2j:jar</include>
                <include>com.fasterxml.jackson.core:jackson-core:jar</include>
                <include>com.fasterxml.jackson.core:jackson-databind:jar</include>
                <include>com.fasterxml.jackson.core:jackson-annotations:jar</include>
                <include>com.fasterxml.jackson.dataformat:jackson-dataformat-yaml:jar</include>
                <include>commons-codec:commons-codec:jar</include>
                <include>com.hubspot.jinjava:jinjava:jar</include>
                <include>org.apache.commons:commons-lang3:jar</include>
                <include>commons-lang.wso2:commons-lang:jar</include>
                <include>commons-logging:commons-logging:jar</include>
                <include>org.apache.logging.log4j:log4j-jcl:jar</include>
                <include>io.asgardeo.java.oidc.sdk:io.asgardeo.java.oidc.sdk:jar</include>
                <include>com.nimbusds:oauth2-oidc-sdk:jar</include>
                <include>com.nimbusds:nimbus-jose-jwt:jar</include>
                <include>net.minidev:json-smart:jar</include>
                <include>net.minidev:accessors-smart:jar</include>
                <include>org.wso2.ei:org.wso2.micro.integrator.dashboard.utils:jar</include>
                <include>org.wso2.ei:org.wso2.dashboard.security.user.core:jar</include>
                <include>org.wso2.ei:org.wso2.micro.integrator.security:jar</include>
                <include>com.zaxxer:HikariCP:jar</include>
                <include>org.wso2.ei:org.wso2.micro.integrator.core:jar</include>
                <include>org.apache.ws.commons.axiom.wso2:axiom:jar</include>
                <include>org.wso2.securevault:org.wso2.securevault:jar</include>
                <include>org.wso2.carbon:org.wso2.carbon.securevault:jar</include>
                <include>org.wso2.ciphertool:org.wso2.ciphertool:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
